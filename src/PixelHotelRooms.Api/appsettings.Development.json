{
  "Name": "pixel-hotel-rooms",
  "Version": "0.0.1",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(LocalDb)\\MSSQLLocalDB;Initial Catalog=rooms;Integrated Security=SSPI;"
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200",
    "IndexFormat": "pixel-hotel-rooms-{0:yyyy.MM}"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch"
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
